<odoo>
    <data>
        <!-- Grey boolean on Journal entry form -->
        <record id="account_view_move_grey_boolean_form"
                model="ir.ui.view">
            <field name="field_parent" eval="False"/>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="mode">extension</field>
            <field name="model">account.move</field>
            <field name="name">Grey boolean on account move</field>
            <field name="type">form</field>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='company_id']" position="after">
                        <field name="grey" string="Grey"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</odoo>
